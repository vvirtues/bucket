        ]
    },
    "extract_to": {
        "quickbms_scripts.zip": "scripts"
    },
    "pre_install": [
        "$sp=(Get-Location).path",
        "cd $dir",
        "Get-ChildItem -Path \"$dir\\scripts\\xentax_cs\" -File | ForEach-Object { $tgt=\"$dir\\scripts\\$($_.Name)\"; if (Test-Path $tgt) { $tgt=\"$dir\\scripts\\$($_.BaseName)_xentax$($_.Extension)\" }; Move-Item $_.FullName -Destination $tgt }",
        "Remove-Item -Path \"$dir\\scripts\\xentax_cs\" -Recurse -Force",
        "New-Item -ItemType Directory -Path bin -Force",
        "$exe=\"$(appdir quickbms)\\current\\bin\\quickbms.exe\"",
        "$pfx=\"$dir\\\"",
        "$script=\"$bucketsdir\\vvxrtues\\scripts\\quickbms-proxy.ps1\"",
        "Invoke-Expression \"$script $pfx $exe\" | Out-File bin/quickbms.ps1",
        "cd $sp"
    ]
}
